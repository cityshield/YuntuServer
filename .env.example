# Application
APP_NAME=YuntuServer
APP_VERSION=1.0.0
DEBUG=True
API_V1_PREFIX=/api/v1

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql+asyncpg://yuntu:yuntu_password@localhost:5432/yuntu_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# JWT
SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Aliyun OSS
OSS_ACCESS_KEY_ID=your_access_key_id
OSS_ACCESS_KEY_SECRET=your_access_key_secret
OSS_BUCKET_NAME=yuntu-bucket
OSS_ENDPOINT=oss-cn-beijing.aliyuncs.com
OSS_BASE_URL=https://yuntu-bucket.oss-cn-beijing.aliyuncs.com
OSS_SCENE_FOLDER=scenes
OSS_RESULT_FOLDER=results

# Aliyun SMS (短信服务配置)
SMS_SIGN_NAME=your_sms_sign_name
SMS_TEMPLATE_CODE=your_sms_template_code

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Render Settings (模拟渲染参数)
RENDER_SIMULATE_MODE=True
RENDER_FRAME_TIME_MIN=2
RENDER_FRAME_TIME_MAX=5
RENDER_COST_PER_FRAME=0.5

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080","https://yuntucv.com","https://www.yuntucv.com"]

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Domain
DOMAIN=api.yuntucv.com
