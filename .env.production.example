# ========================================
# 生产环境配置文件模板
# ========================================
# 请复制此文件为 .env.production 并填入真实值

# Application
APP_NAME=YuntuServer
APP_VERSION=1.0.0
DEBUG=False
API_V1_PREFIX=/api/v1

# Server
HOST=0.0.0.0
PORT=8000

# Database (生产环境 PostgreSQL)
DATABASE_URL=postgresql+asyncpg://yuntu_user:YOUR_DB_PASSWORD@localhost:5432/yuntu_production
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=YOUR_REDIS_PASSWORD

# JWT
SECRET_KEY=YOUR_SUPER_SECRET_KEY_HERE_CHANGE_THIS_IN_PRODUCTION
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=120
REFRESH_TOKEN_EXPIRE_DAYS=7

# Aliyun OSS
OSS_ACCESS_KEY_ID=YOUR_OSS_ACCESS_KEY_ID
OSS_ACCESS_KEY_SECRET=YOUR_OSS_ACCESS_KEY_SECRET
OSS_BUCKET_NAME=YOUR_BUCKET_NAME
OSS_ENDPOINT=oss-cn-beijing.aliyuncs.com
OSS_BASE_URL=https://YOUR_BUCKET_NAME.oss-cn-beijing.aliyuncs.com
OSS_SCENE_FOLDER=scenes
OSS_RESULT_FOLDER=results

# OSS 回调配置（生产环境）
# 注意：如果没有 SSL 证书，使用 http:// 而不是 https://
# 有 SSL 证书后改为: https://api.yuntucv.com/api/v1/oss-callback/upload-complete
OSS_CALLBACK_URL=http://api.yuntucv.com/api/v1/oss-callback/upload-complete
OSS_CALLBACK_HOST=api.yuntucv.com

# Aliyun STS
OSS_ROLE_ARN=acs:ram::YOUR_ACCOUNT_ID:role/YOUR_ROLE_NAME
STS_ENDPOINT=sts.cn-beijing.aliyuncs.com

# Aliyun SMS
SMS_SIGN_NAME=YOUR_SMS_SIGN
SMS_TEMPLATE_CODE=YOUR_TEMPLATE_CODE

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Render Settings
RENDER_SIMULATE_MODE=False
RENDER_FRAME_TIME_MIN=2
RENDER_FRAME_TIME_MAX=5
RENDER_COST_PER_FRAME=0.5

# CORS (生产环境只允许特定域名)
CORS_ORIGINS=["https://admin.yuntucv.com","https://www.yuntucv.com"]

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/www/api/logs/app.log

# Domain
DOMAIN=api.yuntucv.com

# 微信开放平台配置（扫码登录）
WECHAT_APP_ID=YOUR_WECHAT_APP_ID
WECHAT_APP_SECRET=YOUR_WECHAT_APP_SECRET
WECHAT_REDIRECT_URI=https://api.yuntucv.com/api/v1/wechat/callback

# 微信公众号配置（H5登录 - 可选）
WECHAT_MP_APP_ID=
WECHAT_MP_APP_SECRET=
